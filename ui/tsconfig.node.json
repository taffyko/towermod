{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/env.d.ts",
    "src/main/**/*",
    "src/preload/**/*",
    "src/towermod/**/*",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@towermod": ["./src/towermod"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
