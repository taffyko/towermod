{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-tauri",
      "type": "cargo",
      "command": "build",
      "args": ["--features=bundled-dllreader", "--target=x86_64-pc-windows-msvc"],
      "options": {
        "cwd": "${workspaceFolder}/rust/towermod"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "tauri-dev",
      "problemMatcher": [],
      "type": "shell",
      "isBackground": true,
      "command": "npm",
      "args": ["run", "tauri-dev"]
    },
    {
      "label": "vite",
      "problemMatcher": [],
      "type": "shell",
      // `dev` keeps running in the background
      // ideally you should also configure a `problemMatcher`
      // see https://code.visualstudio.com/docs/editor/tasks#_can-a-background-task-be-used-as-a-prelaunchtask-in-launchjson
      "isBackground": true,
      // change this to your `beforeDevCommand`:
      "command": "npm",
      "args": ["run", "dev"],
    },
  ]
}
