{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/towermod/**/*.d.ts",
    "src/shared/**/*",
    "src/shared/reduxtron/types.ts",
    "src/shared/reduxtron/zustand-store.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@towermod": ["./src/towermod"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
